<Window x:Class="ShellTotalCommander1.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перейменувати" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e" Foreground="White">
    <StackPanel Margin="10">
        <TextBlock Text="Нова назва:" Margin="0,0,0,5"/>
        <TextBox x:Name="NameBox"
                 Margin="0,0,0,10"
                 Height="28"
                 Background="#333333"
                 Foreground="White"
                 BorderBrush="#555555" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="0,0,5,0" Click="Ok_Click"
                    Background="#444444" Foreground="White" BorderBrush="#666666"/>
            <Button Content="Cancel" Width="70" Click="Cancel_Click"
                    Background="#444444" Foreground="White" BorderBrush="#666666"/>
        </StackPanel>
    </StackPanel>
</Window>