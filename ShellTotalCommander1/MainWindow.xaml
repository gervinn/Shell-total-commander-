<Window x:Class="ShellTotalCommander1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Total Commander Shell" Height="500" Width="900"
        Loaded="Window_Loaded"
        Background="#1e1e1e">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Main layout: command entry column, execute button, up button, back button -->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="CommandTextBox"
                 Grid.Row="0"
                 Grid.Column="0"
                 Margin="0,0,8,0"
                 Height="32"
                 VerticalContentAlignment="Center"
                 FontSize="14"
                 KeyDown="CommandTextBox_KeyDown"
                 ToolTip="Enter a shell command (e.g. ls, cd, copy)"
                 Background="#333333"
                 Foreground="White"
                 BorderBrush="#555555" />

        <Button x:Name="ExecuteButton"
                Grid.Row="0"
                Grid.Column="1"
                Content="Execute"
                Height="32"
                Padding="16,0"
                Click="ExecuteButton_Click"
                Background="#444444"
                Foreground="White"
                BorderBrush="#666666" />

        <!-- Up button to navigate to the parent directory -->
        <Button x:Name="UpButton"
                Grid.Row="0"
                Grid.Column="2"
                Content="↑"
                Height="32"
                Padding="10,0"
                Margin="0,0,8,0"
                ToolTip="Go to parent directory"
                Click="UpButton_Click"
                Background="#555555"
                Foreground="White"
                BorderBrush="#888888" />

        <!-- Back button to go back to the previously visited directory -->
        <Button x:Name="BackButton"
                Grid.Row="0"
                Grid.Column="3"
                Content="←"
                Height="32"
                Padding="10,0"
                ToolTip="Go back to previous directory"
                Click="BackButton_Click"
                Background="#555555"
                Foreground="White"
                BorderBrush="#888888" />

        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="1"
                   Grid.ColumnSpan="4"
                   Margin="0,10,0,10"
                   TextWrapping="Wrap"
                   Foreground="LightGreen" />

        <ListView x:Name="ItemsListView"
                  Grid.Row="2"
                  Grid.ColumnSpan="4"
                  BorderBrush="#666666"
                  BorderThickness="1"
                  Background="#262626"
                  Foreground="White"
                  MouseDoubleClick="ItemsListView_MouseDoubleClick">
            <ListView.View>
                <GridView AllowsColumnReorder="True">
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200" />
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding FullPath}" Width="350" />
                    <GridViewColumn Header="Directory" DisplayMemberBinding="{Binding IsDirectory}" Width="80" />
                    <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="100" />
                    <GridViewColumn Header="Modified" DisplayMemberBinding="{Binding Modified}" Width="150" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
